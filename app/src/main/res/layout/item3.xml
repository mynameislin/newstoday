<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/item3_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item3_imagelist1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/item3_imagelist2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/item3_imagelist3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item3_text_source"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item3_text_comment_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/item3_text_behot_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="路路路路"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/item3_dian"
            />

    </LinearLayout>
</LinearLayout>
